<form method="POST" class="form-horizontal" action=<%= "/todos/" + id + "?_method=PUT" %>>
  <div class="container jumbotron">
    <h1>Edit The Following To Do</h1>
  </div>
  <div class="form-group">
    <label for="exampleInputName2" class="col-sm-2 control-label">ID: </label>
    <div class="col-sm-10">
      <label><%= id %></label>
    </div>
  </div>
  <div class="form-group">
    <label for="exampleInputName2" class="col-sm-2 control-label"> Name: </label>
    <div class="col-sm-10">
      <input type="text" name="name">
    </div>
  </div>
  <div class="form-group">
    <label for="exampleInputName2" class="col-sm-2 control-label"> Description: </label>
    <div class="col-sm-10">
      <input type="text" name="description">
    </div>
  </div>
  <div class="form-group">
    <label for="exampleInputName2" class="col-sm-2 control-label"> Completed: </label>
    <div class="col-sm-10">
      <input type="text" name="completed">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input class="btn btn-primary btn-lg" type="submit" value="Edit">
    </div>
  </div>
</form>
</div>
